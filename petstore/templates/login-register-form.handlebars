<div class="row" id="loginFormContainer">
    <div class="shadow col-lg-6 col-md-7 col-sm-8 col-xs-11">
        <form action="">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-11 form-group" id="login">
                <label>Log in:</label>
                <input class="form-control" type="text" name="" placeholder="email" id="login-email">
                <input class="form-control" type="password" placeholder="password" id="login-password">
                <button class="btn btn-success" type="button" id="login-btn">Log in</button>
            </div>
        </form>

        <form action="">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-11 form-group" id="register">
                <label>Register:</label>
                <input class="form-control" type="text" placeholder="email">
                <input class="form-control" type="password" placeholder="password">
                <input class="form-control" type="password" placeholder="repeat password">
                <input class="form-control" type="text" placeholder="First name">
                <input class="form-control" type="text" placeholder="Last name">
                <button class="btn btn-primary" type="button">Register</button>
            </div>
        </form>
    </div>
</div>