<div class="row">
    <aside id="filter" class="col-lg-3 col-md-3 col-sm-4 col-xs-11 shadow">
        <input id="show-all-products" type="checkbox" name="" value="">
        <label for="show-all-products">Show all</label>
        <h4>Filter by cat's age</h4>
        <div class="sub-filter">
            {{#each catAges}}
                <div> 
                    <input id="filter-age-{{ageString}}" type="checkbox" name="catAgeSpecific" value="{{ageString}}" {{#if isSelected}}checked="checked"{{/if}}>
                    <label for="filter-age-{{ageString}}">{{ageString}}</label>
                </div>
            {{/each}}
        </div>
        <h4>Filter by amount</h4>
        <div class="sub-filter">
            {{#each catFoodAvailableAmounts}}
                <div> 
                    <input id="filter-age-{{amountInKg}}" type="checkbox" name="amountInKg" value="{{amountInKg}}" {{#if isSelected}}checked="checked"{{/if}}>
                    <label for="filter-age-{{amountInKg}}">{{amountInKg}} kg</label>
                </div>
            {{/each}}
        </div>
        <button id="filter-cat-food-button" class="btn btn-primary btn-lg" type="button">Filter</button>
    </aside>
    <!-- end aside -->
    <section id="items-container" class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
        {{#each catFoodList}}
        <div class="product-list-item col-lg-4 col-md-6 col-sm-12 col-xs-12">
            <h4 class="product-name">{{name}}</h4>
            <img class="img-responsive" src={{imageURL}} alt="food">  
            <h4>Price: {{price}} BGN</h4>          
            <div>
                <a class="btn btn-info" href="#{{productDetailPath}}">More Info</a>
                <button class="add-to-cart-button btn btn-info" value="{{@index}}">Add to cart</button>
            </div>
        </div>
        {{/each}}
    </section>
</div>