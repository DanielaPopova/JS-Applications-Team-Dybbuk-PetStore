 <div class="row">

        <aside id="filter" class="col-lg-3 col-md-3 col-sm-4 col-xs-11 shadow">

            <input type="checkbox" name="" value="">
            <label for="">Show all kind of food</label>

            <h4>filter the food by dog's size</h4>
            <div class="sub-filter">
                <div><input type="checkbox" name="" value="">
                    <label for="">very small</label></div>
                <div><input type="checkbox" name="" value="">
                    <label for="">small</label></div>
                <div> <input type="checkbox" name="" value="">
                    <label for="">big</label></div>
                <div> <input type="checkbox" name="" value="">
                    <label for="">giant</label></div>
            </div>
            <h4>filter the food by dog's age</h4>
            <div class="sub-filter">
                <div> <input type="checkbox" name="" value="">
                    <label for="">puppy</label>
                </div>

                <div>
                    <input type="checkbox" name="" value="">
                    <label for="">adult</label>
                </div>
                <div>
                    <input type="checkbox" name="" value="">
                    <label for="">senior</label>
                </div>
            </div>
            <button class="btn-lg btn-primary" type="button">Filter</button>
        </aside>
        <!-- end aside -->

        <section id="items-container" class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
            {{#each this}}
            <div class="food-list-item col-lg-4 col-md-6 col-sm-12 col-xs-12">
                <h4>{{name}}<span>{{price}}</span></h4>
                <img src={{imageURL}} alt="food">
                <div>
                    <button class="btn btn-info">More...</button>
                    <button class="btn btn-info">Add</button>
                </div>
            </div>
            {{/each}}
        </section>
         <p>1111111111111111111111111111111111111111111111111111</p>
    </div>
   