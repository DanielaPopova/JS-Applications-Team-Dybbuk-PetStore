<section id="product-details" class="row">
    <div class="product-info shadow col-lg-6 col-md-7 col-sm-10 col-xs-11">
        <h4>{{name}}</h4>
        <img src={{imageURL}} alt="food">
        <span>Description:</span>
        <p>{{description}}</p>
        <div class="col-lg-8 col-xs-11">
            <div><span>Amount:</span> <span>{{amountInKg}} kg</span></div>
            <div><span>For dog age:</span> <span>{{dogAgeSpecific}}</span></div>
            <div><span>Price:</span> <span>{{price}} BGN</span></div>
            <button id="add-to-cart-button" class="btn btn-info" type="button">Add</button>
        </div>
    </div>
</section>