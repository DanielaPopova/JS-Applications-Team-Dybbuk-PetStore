<div class="row">

    <aside id="filter" class="col-lg-3 col-md-3 col-sm-4 col-xs-11 shadow">

        <input id="show-all-products" type="checkbox" name="" value="">
        <label for="show-all-products">Show all</label>

        <h4>Filter by dog's size</h4>
        <div class="sub-filter">
            <div><input id="very-small" type="checkbox" name="" value="">
                <label for="very-small">very small</label></div>
            <div><input id="small" type="checkbox" name="" value="">
                <label for="small">small</label></div>
            <div> <input id="big" type="checkbox" name="" value="">
                <label for="big">big</label></div>
            <div> <input id="giand" type="checkbox" name="" value="">
                <label for="giant">giant</label></div>
        </div>
        <h4>Filter by dog's age</h4>
        <div class="sub-filter">
            <div> <input id="puppy" type="checkbox" name="" value="">
                <label for="puppy">puppy</label>
            </div>

            <div>
                <input id="adult" type="checkbox" name="" value="">
                <label for="adult">adult</label>
            </div>
            <div>
                <input id="senior" type="checkbox" name="" value="">
                <label for="senior">senior</label>
            </div>
        </div>
        <button class="btn-lg btn-primary" type="button">Filter</button>
    </aside>
    <!-- end aside -->

    <section id="items-container" class="col-lg-9 col-md-9 col-sm-8 col-xs-12">

        {{#each this}}
        <div class="food-list-item col-lg-4 col-md-6 col-sm-12 col-xs-12">
            <div id="name-and-price">
                <h4>{{name}}<span> ${{price}}</span></h4>
            </div>
            <div class="img-container">
                <img src={{imageURL}} alt="food">
            </div>
            <div>
                <button class="btn btn-info">More...</button>
                <button class="btn btn-info">Add</button>
            </div>
        </div>
        {{/each}}

    </section>

</div>